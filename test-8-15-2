int is_leapyear(int year)
{
	if ((year % 4 == 0 && year % 100 == 0) || (year % 400 == 0))
	{
		return 1;
	}
	return -1;
}
int main()
{
	int year = 0;
	scanf("%d", &year);
	int ret = is_leapyear(year);
	if (ret == 1)
	{
		printf("是闰年");
	}
	else
	{
		printf("不是闰年");
	}
	return 0;
}
判断一个数是不是素数
int f(int n)  
{
	int i;
	int sum = 0;
	if (n != 2)
	{
		for (i = 2; i<n; i++)
		{
			if (n%i == 0)
			{
				sum = 0;
				break;
			}
			if (n%i != 0)
				sum = 1;
		}
	}
	if (n == 2)
		sum = 1;
	return sum;
}
int main()
{
	int n;
	scanf("%d", &n);
	if (f(n) == 1)
		printf("yes");
	else
		printf("no");
	return 0;
}

void change(int*a, int*b) //所有形参都是实参的一份拷贝
{
	int c = *a;
	*a = *b;
	*b = c;
}
int main() {
	int a = 0;
	int b = 0;
	scanf("%d%d", &a, &b);
	change(&a, &b);//进行传值而非传值
	printf("a=%d,b=%d \n", a, b);
	system("pause");
	return 0;
}
#include<stdlib.h>

void Mult(int n)
{
	int row, lin;

	for (row = 1; row <= n; row++)
	{
		for (lin = 1; lin <= row; lin++)
		{
			printf("%-2d*%-2d=%-3d ", row, lin, row*lin);
		}
		printf("\n");
	}
}

int main()
{
	int n = 0;
	scanf("%d", &n);
	Mult(n);//n为参数
	system("pause");
	return 0;
}
